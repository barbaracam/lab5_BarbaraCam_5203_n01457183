@model IEnumerable<lab5_BarbaraCam_5203_n01457183.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<a class="btn btn-default" asp-action="Create">Create Book</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Book Title</th>
            <th>First Name</th>
            <th>Last Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Id)</td>
            <td>@Html.DisplayFor(m => item.Title)</td>
            <td>@Html.DisplayFor(m => item.FirstName)</td>            
            <td>@Html.DisplayFor(m => item.LastName)</td>

        </tr>
        }
    </tbody>

</table>

